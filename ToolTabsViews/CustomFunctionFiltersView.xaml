<UserControl x:Class="ComputerGraphicsProject.ToolTabsViews.CustomFunctionFiltersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Custom Function Filter" FontWeight="Bold"/>
        <Grid HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" BorderThickness="2" Margin="10">
                <Canvas Grid.Row="0" Name="FunctionCanvas" Width="256" Height="256"
                Background="White" MouseLeftButtonDown="Canvas_MouseDown" MouseMove="Canvas_MouseMove">
                    <Polyline Name="FunctionPolyline" Stroke="Black" StrokeThickness="2"/>
                </Canvas>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Button Content="Add Point" Click="AddPoint_Click" Margin="10"/>
                <Button Content="Reset" Click="Reset_Click" Margin="10"/>
                <Button Content="Save Filter" Click="SaveFilter_Click" Margin="10"/>
            </StackPanel>
        </Grid>

    </StackPanel>

</UserControl>
