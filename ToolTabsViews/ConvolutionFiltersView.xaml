<UserControl x:Class="ComputerGraphicsProject.ToolTabsViews.ConvolutionFiltersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Convolution Filters" FontWeight="Bold"/>
        <Button Content="Blur" Margin="5" Click="Blur_Click"/>
        <Button Content="Gaussian Blur" Margin="5" Click="GaussianBlur_Click"/>
        <Button Content="Sharpen" Margin="5" Click="Sharpen_Click"/>
        <Button Content="Edge Detection" Margin="5" Click="EdgeDetection_Click"/>
        <Button Content="Emboss" Margin="5" Click="Emboss_Click"/>
        <Button Content="Erosion" Margin="5" Click="Erosion_Click"/>
        <Button Content="Dilation" Margin="5" Click="Dilation_Click"/>
    </StackPanel>
</UserControl>
